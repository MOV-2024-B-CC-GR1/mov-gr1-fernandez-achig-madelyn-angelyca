<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-Nota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Campos del Nota -->
    <TextView
        android:id="@+id/textViewEstudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewProfesor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profesor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEstudiante" />

    <TextView
        android:id="@+id/textViewAnio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Periodo"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewProfesor" />

    <TextView
        android:id="@+id/textViewValorDeLaNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valor de la nota"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAnio" />

    <TextView
        android:id="@+id/textViewDisponible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Disponible"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewValorDeLaNota" />

    <!-- Botones de modificar y eliminar -->
    <Button
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDisponible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEliminar" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDisponible"
        app:layout_constraintStart_toEndOf="@id/btnModificar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>